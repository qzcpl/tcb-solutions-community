page,
.container{
  background: #fff;
}
/* banner */
.banner{
  width: 100%;
  height: 150rpx;
  background: #4a90e2;
  position: relative;
  box-sizing: border-box;
  padding: 20rpx 0;
}
.text-white{
  color: rgba(255,255,255,0.65);
}
.active{
  color: white;
  font-weight: 500;
  border-bottom: 10rpx solid #fff;
}
.text-center{
  text-align: center;
  line-height: 100rpx;
}
.flex{
  display: flex;
}
.flex-sub{
  flex:1;
}

.mainbody{
  width: 90%;
  margin: 0 auto;
}


.list-box{
  display: flex;
  position: relative;
  margin-top: 10rpx;
}
.avatar{
  width: 120rpx;
  height: 100rpx;
  padding-right: 20rpx;
}
.phone{
  color: #999999;
  font-size: 0.8rem;
}
.connect{
  margin-left: auto;
  width:200rpx;
  height: 100rpx;
}
.connect-icon{
  width: 100rpx;
  height: 100rpx;
}
